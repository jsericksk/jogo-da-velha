			android:textSize="75sp"
			android:onClick="onClickPosition"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tvPosition4"
			android:layout_width="90dp"
